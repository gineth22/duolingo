---
const { title } = Astro.props;
import { Icon } from 'astro-icon/components'
import "/node_modules/flag-icons/css/flag-icons.min.css";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="h-16 bg-white flex items-center">
			<div class="container flex flex-row items-center justify-between max-w-[1200px] mx-auto">
			<img src="/logo duolingo.svg" >
			<a class="relative group flex flex-row items-center hover:text-gray-300 text-gray-400 font-extrabold uppercase"  href="">
				idioma de la pagina
				<Icon name="mdi:chevron-down" />
				<div class=" absolute top-6 hidden group-hover:block">
					opciones de menu
				</div>
			</a>

			</div>
			
	</header>
		<slot />
	</body>
</html>

